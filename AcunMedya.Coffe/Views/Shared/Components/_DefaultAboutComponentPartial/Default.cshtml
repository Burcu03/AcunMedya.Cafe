﻿
@model List<AcunMedya.Coffe.Entities.About>


@foreach (var item in Model)
{
<section class="video-sec-area pb-100 pt-40" id="about">
	<div class="container">
		<div class="row justify-content-start align-items-center">
			<div class="col-lg-6 video-right d-flex justify-content-center align-items-center position-relative">
				<img class="img-fluid" src="@item.ImageUrl" alt="About Video" style="border-radius: 8px;">

				<!-- Play butonu -->
				<a href="@item.VideoUrl" data-lity class="play-button">
					<span class="play-icon">&#9658;</span>
				</a>
			</div>

			<div class="col-lg-6 video-left">
				<h4 style="color: #F39C12;">@item.SubTitle</h4>
				<h1>@item.Title</h1>
				<p>@item.Description</p>
			</div>
		</div>
	</div>
</section>

}

<!-- CSS for play button -->
<style>
	.play-button {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 80px;
		height: 80px;
		background-color: rgba(255, 255, 255, 0.7);
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		text-decoration: none;
		box-shadow: 0 0 15px rgba(0,0,0,0.3);
		transition: background-color 0.3s ease;
	}
	.play-button:hover {
		background-color: rgba(255, 255, 255, 0.9);
	}

	.play-icon {
		font-size: 36px;
		color: #000;
	}
</style>

<!-- Lity Lightbox Gereksinimleri -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/lity/2.4.1/lity.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lity/2.4.1/lity.min.js"></script>
