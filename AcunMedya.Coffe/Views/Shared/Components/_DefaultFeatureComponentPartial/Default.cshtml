@model List<AcunMedya.Coffe.Entities.Feature>

@foreach (var item in Model)
{
    <section class="banner-area" id="home" style="background-image: url('@item.ImageUrl'); background-size: cover; background-position: center; background-repeat: no-repeat;">
        <div class="container">
            <div class="row fullscreen d-flex align-items-center justify-content-start">
                <div class="banner-content col-lg-7">
                    <h3 class="text-white text-uppercase">@item.SubTitle</h3>
                    <h1>@item.Title</h1>
                    <a href="#coffee" class="primary-btn text-uppercase">Menüyü Keşfet</a>
                </div>
            </div>
        </div>
    </section>
}
