@model List<AcunMedya.Coffe.Entities.Adress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Adres Bilgisi Tablsou </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Adres</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Saatler</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Adres</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AdressId</td>
                                    <td>@item.OpenHours</td>
                                    <td>@item.Email</td>
                                    <td>@item.Call</td>
                                    <td>@item.Location</td>
                                    <td><a href="/Admin/Adress/UpdateAdress/@item.AdressId" class="badge badge-info">Güncelle</a></td>
                                    <td><a href="/Admin/Adress/DeleteAdress/@item.AdressId" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/Adress/AddAdress" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Adres</a>
                </div>
            </div>
        </div>

    </div>
</div>