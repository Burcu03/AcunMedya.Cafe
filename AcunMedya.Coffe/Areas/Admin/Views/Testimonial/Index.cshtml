
@model List<AcunMedya.Coffe.Entities.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Referanslar </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                <li class="breadcrumb-item active" aria-current="page">Müşteri Yorumları</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Resim</th>
                                <th>Puan</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TestimonialId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="Resim" style="width: 100px; height: 100px;" />
                                    <td>@item.raiting</td>
                                    <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="badge badge-info">Güncelle</a></td>
                                    <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="badge badge-danger">Sil</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Admin/Testimonial/AddTestimonial" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Yeni Yorum</a>
                </div>
            </div>
        </div>

    </div>
</div>
